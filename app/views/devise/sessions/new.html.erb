<div class="container-login">
  <h2 class="list-title underline-blue "><%= t('.sign_in')%></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:'form-control', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password,  class:'form-control', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-group">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "ログインする", class: 'button button-blue' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
