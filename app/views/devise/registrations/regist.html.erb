<%=render "devise/registrations/header" %>

<div class="container-login">
  プロフィールを登録してください。
  <%= form_for @user,  url: users_confirm_path, html: { method: :post } do |f| %>
      <%= bootstrap_devise_error_messages!%>
      <div class="form-group">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, class:'form-control', autofocus: true, autocomplete: "nickname", placeholder: "ニックネームを入力してください", value: @user.nickname, required: true %>
      </div>

      <div class="form-group">
        <%= f.label :prefecture %>
        <%= f.select :prefecture, User.prefectures.keys, {prompt: "お住まいの都道府県を選択して下さい"}, class: "form-control", value: @user.prefecture %>
      </div>

      <div class="form-group">
        <%= f.label :sex %>
        <%= f.select :sex, User.sexes.keys, {include_blank: "性別を選択して下さい"}, class: 'form-control', value: @user.sex %>
      </div>

      <div class="form-group">
        <%= f.label :birth_year %>
        <%= f.date_select :birth_year, {discard_day: true, discard_month: true, start_year: Time.now.year, end_year: 1950, prompt: "生まれた年を選択してください"}, class: "form-control", value: @user.birth_year %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control", accept: "image/jpg,image/gif,image/jpeg,image/png", autofocus: true, value: @user.image %>
      </div>

      <div class="form-group">
        <%= f.text_area :profile, class:'form-control', autofocus: true, autocomplete: "profile", placeholder: "プロフィール文を入力してください", rows: 10, value: @user.profile %>
      </div>

      メール送信<br>
      <div class="form-group">
        <%= check_box_tag :emailcheck %>
        <%= label_tag :emailcheck, "メール配信を希望する" %>
      </div>

    <div class="form-group">
      <%= f.submit "確認画面へ", class:'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
