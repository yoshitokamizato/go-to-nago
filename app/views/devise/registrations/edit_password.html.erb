<div class="login-area">
  <div class="list-title underline-blue">
    <h1>パスワードを変更</h1>
  </div>
  
  <%= form_for(resource ,as: resource_name, url: users_update_password_path(resource_name), html: { method: :put, class: "common-form" }) do |f| %>
  <%= bootstrap_devise_error_messages!%>
  <div class="form-group ">
    <%= f.label "新しいパスワード" %>
    <%= f.password_field :password, class:'form-control', autocomplete: "new-password" %>
  </div>
  <div class="form-group">
    <%= f.label "新しいパスワード（確認）" %>
    <%= f.password_field :password_confirmation, class:'form-control', autocomplete: "new-password" %>
  </div>
  <div class="form-group">
    <%= f.label :current_password %><span class="badge badge-danger">必須</span>
    <%= f.password_field :current_password, class:'form-control', autocomplete: "current-password" %>
  </div>
  <%= f.submit "変更する", class:'button button-blue-color' %>
  <%= link_to "マイページヘ戻る", user_path ,class:"button button-gray-color" %>
  <% end %>
</div>