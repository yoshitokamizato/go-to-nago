<div class="list-body">
  <div class="title text-center">
    <h2><%= @facility.name%>
      <% if user_signed_in? %>
      <div class="bookmark_btn_<%= @facility.id %>" data-bookmark='1' style='display:inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px;'>
        <object><%= render 'facilities/bookmark_area', facility: @facility %></object>
      </div>
      <% else%>
      <div style='display: inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px'>
        <object><%= link_to icon('far', 'star'), new_user_session_path %></object>
      </div>
      <% end %>
    </h2>
  </div>
  <div class="list-cd">
    <% if @facility.type == "gourmet" %>
    <p><a href="/" class="">home</a> > <%= link_to "グルメ" ,gourmet_list_path %> > <%= @facility.name %></p>
    <% else %>
    <p><a href="/" class="">home</a> > <%= link_to "施設",facility_list_path %> > <%= @facility.name %></p>
    <% end %>
  </div>
  <div class="list-title">
    <h3>メニュー</h3>
  </div>
  <div class="list-wrapper">
    <div class="row " id="menu_lists">
      <%=render 'menus/menu_list' %>
      <div class="list-button col-12">
        <%= link_to_next_page @menus, 'もっと見る', remote: true ,
        class:"more btn btn-primary btn-lg btn-blocsk btn-round" ,type:"button" ,id:'view_more'%>
      </div>
    </div>
  </div>
  <%= render partial: "publics/bottom_area", locals: {sns_icon: true, facility_edit_request: true } %>
</div>