<div class="list-body">
  <div class="list-title">
    <h3>グルメ(スポット）</h3>
  </div>
  <div class="list-cd">
    <p>home > グルメ(スポット）</p>
  </div>




  <div class="list-wrapper">
    <div class="row">
      <% @facilities.each do |facility| %>
        <div class="col-6 col-lg-3">
          <div class="card show-row-list">
            <a href="/"></a>
            <%= image_tag(facility.facility_images.image ,class:"card-img-top" ,alt:"...") %>
            <div class="card-body">
              <h4 class="card-title"><%= facility.name %></h4>
              <p class="card-text"><%= facility.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <button type="button" class="btn btn-secondary btn-lg btn-block list-button">もっと見る</button>
  </div>

  <div class="bottom">
    <div class="bottom-sns">
      <ul>
        <li><a href="#" class="circle"><i class="fab fa-twitter"></i></a></li>
        <li><a href="#" class="circle"><i class="fab fa-google-plus-g"></i></a></li>
        <li><a href="#" class="circle"><i class="fab fa-facebook-f"></i></a></li>
        <li><a href="#" class="circle"><i class="fab fa-instagram"></i></a></li>
      </ul>
    </div>
    <div class="bottom-text">
      <button type="button" class="btn btn-secondary btn-lg btn-block">情報修正依頼はこちら</button>
    </div>
  </div>

</div>
