<%
=begin%>
詳細画面のコードです
<%
=end%>
<div class="detail-wrapper">
  <div class="title text-center">
    <h2><%= @facility.name%>
      <% if user_signed_in? %>
      <div class="bookmark_btn_<%= @facility.id %>" data-bookmark='1' style='display:inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px;'>
        <object><%= render 'bookmark_area', facility: @facility %></object>
      </div>
      <% else%>
      <div style='display: inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px'>
        <object><%= link_to icon('far', 'star'), new_user_session_path %></object>
      </div>
      <% end %>
    </h2>
  </div>
  <div class="list-cd">
    <% if @facility.type == "gourmet" %>
    <p><a href="/" class="">home</a> > <%= link_to "グルメ" ,gourmet_list_path %> > <%= @facility.name %></p>
    <% else %>
    <p><a href="/" class="">home</a> > <%= link_to "施設",facility_list_path %> > <%= @facility.name %></p>
    <% end %>
  </div>
  <div class="top">
    <%images = @facility.facility_images.first%>
    <%= image_tag("/facility_image/"+images.image ,class:"card-img-top w-100" ,alt:"...",style:"width:500px;")  %>
    <p><%= @facility.description%></p>
  </div>
  <div class="recommend text-center">
    <h3>おすすめポイント</h3>
    <hr>
    <div class="balloon1-top">
      <p><%= @facility.advice %>
        <% if user_signed_in? %>
      <div class="bookmark_btn_<%= @facility.id %>" data-bookmark='1' style='display:inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px;'>
        <object><%= render 'bookmark_area', facility: @facility %></object>
      </div>
      <% else%>
      <div style='display: inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px'>
        <object ect><%= link_to icon('far', 'star'), new_user_session_path %></object>
      </div>
      <% end %></p>
    </div>
  </div>
  <div class="menu text-center">
    <h3>メニュー</h3>
    <hr>
    <div id="carouselOption1" class="carousel slide" data-ride="carousel">
      <!-- インジケータの設定 -->
      <ol class="carousel-indicators">
        <li data-target="#carouselOption1" data-slide-to="0" class="active"></li>
        <li data-target="#carouselOption1" data-slide-to="1"></li>
        <li data-target="#carouselOption1" data-slide-to="2"></li>
      </ol>
      <!-- スライドさせる画像の設定 -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("/menu_image/"+@facility.menus[0].image ,class:"d-block w-100" ,alt:"...") %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%= @facility.menus[0].name %></h5>
            <p><%= @facility.menus[0].content %></p>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag("/menu_image/"+@facility.menus[1].image ,class:"d-block w-100" ,alt:"...") %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%= @facility.menus[1].name %></h5>
            <p><%= @facility.menus[1].content %></p>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag("/menu_image/"+@facility.menus[2].image ,class:"d-block w-100" ,alt:"...") %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%= @facility.menus[2].name %></h5>
            <p><%= @facility.menus[2].content %></p>
          </div>
        </div>
      </div>
      <!-- スライドコントロールの設定 -->
      <a class="carousel-control-prev" href="#carouselOption1" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">前へ</span>
      </a>
      <a class="carousel-control-next" href="#carouselOption1" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">次へ</span>
      </a>
    </div>
  </div>

  <div class="text-center">
    <table class="table">
      <tbody>
        <tr>
          <th scope="row">住所</th>
          <td><%= @facility.address %></td>
        </tr>
        <tr>
          <th scope="row">アクセス</th>
          <td><%= @facility.address %></td>
        </tr>
        <tr>
          <th scope="row">TEL</th>
          <td><%= @facility.tel %></td>
        </tr>
        <tr>
          <th scope="row">営業時間</th>
          <td><%= @facility.first_open %> 〜 <%= @facility.first_close %>
            <%if @facility.last_open || @facility.last_close %>
            <%= @facility.last_open %> 〜 <%= @facility.last_close %>
            <%end%></td>
        </tr>
        <tr>
          <th scope="row">定休日</th>
          <td><%= @facility.holiday %></td>
        </tr>
        <tr>
          <th scope="row">駐車場</th>
          <td><%= @facility.parking %></td>
        </tr>
        <tr>
          <th scope="row">URL</th>
          <td><%= @facility.home_page %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="google-map text-center">
    <h3 class="text-center">地図</h3>
    <hr>
    <div class="w-100" id="map" data-facility-latitude="<%= @facility.latitude %>" data-facility-longitude="<%= @facility.longitude %>">google map</div>
  </div>
</div>

