<div class="list-body">
  <div class="list-title">
    <h3>施設一覧</h3>
  </div>
  <div class="list-cd">
    <p><a href="/" class="">home</a> > 施設<p>
  </div>


  <div class="list-wrapper">
    <div class="row">
      <% @facilities.first(4).each do |facility| %>
      <div class="col-6 col-lg-3 show-row-list">
        <a href="/" class="a-card">
          <div class="card ">
            <%facility.facility_images.each do |images|%>
            <%= image_tag(images.image ,class:"card-img-top" ,alt:"...") %>
            <%end%>
            <div class="card-body">
              <h4 class="card-title"><%= facility.name %></h4>
              <% if user_signed_in? %>
              <div id="bookmark_btn_<%= facility.id %>" style='display: inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px'>
                <object><%= render 'bookmark_area', facility: facility %></object>
              </div>
              <% else%>
              <%= link_to icon('far', 'star'), new_user_session_path %>
              <% end %>
              <br>
              <p class="card-text"><%= facility.description %></p>
            </div>
          </div>
        </a>
      </div>
      <% end %>
    </div>
    <div class="list-button">
      <a href="/facility/list" type="button" class="btn btn-primary btn-lg btn-block">もっと見る</a>
    </div>
  </div>

  <div class="bottom">
    <div class="bottom-sns">
      <ul>
        <li><a href="#" class="circle"><i class="fab fa-twitter"></i></a></li>
        <li><a href="#" class="circle"><i class="fab fa-google-plus-g"></i></a></li>
        <li><a href="#" class="circle"><i class="fab fa-facebook-f"></i></a></li>
        <li><a href="#" class="circle"><i class="fab fa-instagram"></i></a></li>
      </ul>
    </div>
    <div class="bottom-text">
      <button type="button" class="btn btn-primary btn-lg btn-block">情報修正依頼はこちら</button>
    </div>
  </div>

</div>