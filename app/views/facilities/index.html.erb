<div class="top col-12">
  <%= image_tag 'title.png' ,class:"top-image" %>
</div>
<div class="list-body">
  <div class="list-title">
    <h3>グルメ一覧</h3>
  </div>
  <div class="list-wrapper">
    <div class="row">
      <% @gourmets.first(4).each do |gourmet| %>
      <div class="col-6 col-lg-3 show-row-list">
        <a href="facilities/<%=gourmet.id%>" class="a-card">
          <div class="card">
            <%images = gourmet.facility_images.first%>
            <%= image_tag("/facility_image/"+images.image ,class:"card-img-top" ,alt:"...") %>
            <div class="card-body">
              <h4 class="card-title"><%= gourmet.name %></h4>
              <% if user_signed_in? %>
              <div id="bookmark_btn_<%= gourmet.id %>" style='display:inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px;'>
                <object><%= render 'bookmark_area', facility: gourmet %></object>
              </div>
              <% else%>
              <div style='display: inline; float: right; padding-right:20px; font-size:30px; margin-bottom:30px'>
                <object ect><%= link_to icon('far', 'star'), new_user_session_path %></object>
              </div>
              <% end %>
              <br>
              <p class="card-text"><%= gourmet.description %></p>
            </div>
          </div>
        </a>
      </div>
      <% end %>
    </div>
    <div class="list-button">
      <a href="/gourmet/list" type="button" class="btn btn-primary btn-lg btn-block">もっと見る</a>
    </div>
  </div>
</div>
