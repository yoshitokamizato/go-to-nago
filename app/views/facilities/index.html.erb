<div class="list-body row">
  <div class="list-title underline-blue">
    <h3>おすすめグルメ</h3>
  </div>
  <div class="list-wrapper col-12">
    <div class="row">
      <%= render partial: 'facilities/facilities_list', collection: @gourmets.first(4), as: 'facility' %>
    </div>
    <div class="list-button">
      <%= link_to 'おすすめグルメをもっと見る', facilities_list_path(type: "gourmet"), class:"button button-blue-border button-arrow" %>
    </div>
  </div>
</div>
