    <h3 class="text-white">おすすめ観光スポット</h3>
  </div>

  <div class="list-wrapper col-12">
    <div class="row">
      <%= render partial: 'facilities/facilities_list', collection: @spots.first(4), as: 'facility' %>
    </div>
    <div class="list-button">
      <%= link_to '観光スポットをもっと見る', facilities_list_path(type: "spot"), class:"button button-white-border button-arrow" %>
    </div>
  </div>
</div>
